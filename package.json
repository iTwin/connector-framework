{
  "name": "@itwin/connector-framework",
  "version": "1.0.0-dev.0",
  "description": "iTwin Connector Framework",
  "main": "lib/connector-framework.js",
  "typings": "lib/connector-framework",
  "license": "MIT",
  "engines": {
    "node": ">=12.17.0 <15.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/connector-framework"
  },
  "scripts": {
    "build": "tsc 1>&2 && npm run copy:assets && npm run copy:test-assets",
    "clean": "rimraf lib .rush/temp/package-deps*.json",
    "docs": "betools docs --tsIndexFile=./itwin-connector-framework.ts --json=../../generated-docs/core/itwin-connector-framework/file.json --onlyJson",
    "copy:assets": "cpx \"./src/assets/**/*\" ./lib/assets",
    "copy:config": "internal-tools copy-config",
    "copy:test-assets": "cpx \"./src/test/assets/**/*\" ./lib/test/assets",
    "extract-api": "betools extract-api --entry=itwin-connector-framework",
    "lint": "eslint -f visualstudio \"./src/**/*.ts\" 1>&2",
    "pretest": "cpx ./src/test/logging.config.json ./lib/test",
    "test": "npm run test:standalone",
    "test:standalone": "npm run pretest && betools test --testDir=\"./lib/test/standalone\"",
    "test:integration": "npm run pretest && betools test --testDir=\"./lib/test/integration\""
  },
  "keywords": [
    "Bentley",
    "BIM",
    "iModel"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "peerDependencies": {
    "@bentley/backend-itwin-client": "3.0.0-dev.22",
    "@bentley/bentleyjs-core": "3.0.0-dev.22",
    "@bentley/context-registry-client": "3.0.0-dev.22",
    "@bentley/geometry-core": "3.0.0-dev.22",
    "@bentley/imodelhub-client": "3.0.0-dev.22",
    "@bentley/imodeljs-backend": "3.0.0-dev.22",
    "@bentley/imodeljs-common": "3.0.0-dev.22"
  },
  "devDependencies": {
    "@bentley/backend-itwin-client": "3.0.0-dev.22",
    "@bentley/bentleyjs-core": "3.0.0-dev.22",
    "@bentley/build-tools": "3.0.0-dev.22",
    "@bentley/context-registry-client": "3.0.0-dev.22",
    "@bentley/ecschema-metadata": "3.0.0-dev.22",
    "@bentley/eslint-plugin": "3.0.0-dev.22",
    "@bentley/geometry-core": "3.0.0-dev.22",
    "@bentley/imodelhub-client": "3.0.0-dev.22",
    "@bentley/imodeljs-backend": "3.0.0-dev.22",
    "@bentley/imodeljs-common": "3.0.0-dev.22",
    "@bentley/itwin-client": "3.0.0-dev.22",
    "@bentley/oidc-signin-tool": "3.0.0-dev.22",
    "@bentley/telemetry-client": "3.0.0-dev.22",
    "@types/chai": "^4.1.4",
    "@types/mocha": "^8.2.2",
    "@types/node": "10.14.1",
    "@types/object-hash": "^1.3.0",
    "chai": "^4.1.2",
    "cpx": "^1.5.0",
    "eslint": "^7.11.0",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "typescript": "~4.3.0"
  },
  "dependencies": {
    "@bentley/config-loader": "^2.18.4",
    "object-hash": "^1.3.1"
  },
  "nyc": {
    "extends": "./node_modules/@bentley/build-tools/.nycrc"
  },
  "eslintConfig": {
    "plugins": [
      "@bentley"
    ],
    "extends": "plugin:@bentley/imodeljs-recommended"
  }
}
