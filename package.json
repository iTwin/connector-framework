{
  "name": "@itwin/connector-framework",
  "version": "0.1.0",
  "description": "iTwin Connector Framework",
  "main": "lib/connector-framework.js",
  "typings": "lib/connector-framework",
  "license": "MIT",
  "engines": {
    "node": ">=14.17.0 <17.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iTwin/connector-framework"
  },
  "scripts": {
    "build": "tsc 1>&2 && npm run copy:test-assets",
    "clean": "rimraf lib",
    "copy:config": "internal-tools copy-config",
    "copy:test-assets": "cpx \"./src/test/assets/**/*\" ./lib/test/assets",
    "lint": "eslint -f visualstudio \"./src/**/*.ts\" 1>&2",
    "lint:fix": "npm run lint -- --fix",
    "pretest": "cpx ./src/test/logging.config.json ./lib/test",
    "test": "npm run test:standalone",
    "lint:copyright": "node .githooks/copyright-linter.js",
    "test:standalone": "npm run pretest && mocha './lib/test/standalone/**/*.js'",
    "test:integration": "npm run pretest && mocha --timeout 100000 './lib/test/integration/**/*.js'",
    "copy:itsyn-assets": "cpx \"./manifest.itsyn.yml\" \"lib/test/TestConnector/\" && cpx \"./node.exe\" \"lib/test/TestConnector/\"",
    "test:connector": "node lib/test/TestConnector/Main.js lib/test/assets/TestArgs.json",
    "documentation": "node ./node_modules/@itwin/build-tools/scripts/docs.js --source=./src --out=./documentation --json=./documentation/doc.json --excludes=test"
  },
  "keywords": [
    "Bentley",
    "BIM",
    "iModel",
    "iTwin",
    "iTwin Connector"
  ],
  "author": {
    "name": "Bentley Systems, Inc.",
    "url": "http://www.bentley.com"
  },
  "devDependencies": {
    "@itwin/build-tools": "^3.0.0",
    "@itwin/core-backend": "^3.0.0",
    "@itwin/core-bentley": "^3.0.0",
    "@itwin/core-common": "^3.0.0",
    "@itwin/core-geometry": "^3.0.0",
    "@itwin/core-quantity": "^3.0.0",
    "@itwin/ecschema-metadata": "^3.0.0",
    "@itwin/eslint-plugin": "^3.0.0",
    "@itwin/imodels-access-backend": "^1.0.1",
    "@itwin/imodels-client-authoring": "^1.0.1",
    "@itwin/node-cli-authorization": "^0.9.0",
    "@itwin/oidc-signin-tool": "^3.2.0",
    "@types/chai": "^4.1.4",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.0.0",
    "@types/object-hash": "^1.3.0",
    "chai": "^4.1.2",
    "cpx2": "^3.0.0",
    "dotenv": "10.0.0",
    "eslint": "^7.11.0",
    "eslint-plugin-deprecation": "^1.3.2",
    "husky": "^4.0.0",
    "lint-staged": "^12.1.2",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "object-hash": "^1.3.1",
    "rimraf": "^3.0.2",
    "typescript": "~4.4.0"
  },
  "peerDependencies": {
    "@itwin/core-backend": "^3.0.0",
    "@itwin/core-bentley": "^3.0.0",
    "@itwin/core-common": "^3.0.0",
    "@itwin/node-cli-authorization": "^0.9.0"
  },
  "nyc": {
    "extends": "./node_modules/@itwin/build-tools/.nycrc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{tsx,ts,jsx,js}": [
      "eslint --max-warnings=0 --fix",
      "npm run lint:copyright --fix"
    ]
  },
  "eslintConfig": {
    "plugins": [
      "@itwin"
    ],
    "extends": "plugin:@itwin/itwinjs-recommended",
    "rules": {
      "no-duplicate-imports": "off",
      "@typescript-eslint/consistent-type-imports": "error"
    }
  }
}
